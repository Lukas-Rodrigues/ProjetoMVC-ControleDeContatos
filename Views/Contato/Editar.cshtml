@model ContatoModel
@{
    ViewData["Title"] = "Editar Contato";
}


<div class="text-center">

    <h1 class="display-4">Editar Contato</h1>
</div>
<form asp-controller="Contato" asp-action="ALterar" method="post">
   <input type="hidden" asp-for = "Id"/>
   
   <div class="form-group">
        <label for="nome">Nome</label>
        <input type="text" asp-for="Nome" class="form-control" placeholder="Digite seu nome">
            @Html.ValidationMessageFor(x => x.Nome)
    </div>
    <div class="form-group">
        <label for="Email">Email</label>
        <input type="text"asp-for="Email" class="form-control" placeholder="Digite seu Email">
            @Html.ValidationMessageFor(x => x.Email)
    </div>
    <div class="form-group">
        <label for="Celular">Celular</label>
        <input type="text" asp-for="Celular" class="form-control" placeholder="Digite seu celular">
            @Html.ValidationMessageFor(x => x.Celular)
    </div>
    <br />
    <button type="submit"class="btn btn-primary ">Alterar</button>
    <a class="btn btn-secondary"asp-controller="Contato" asp-action="Index" role="button">Voltar</a>
</form>